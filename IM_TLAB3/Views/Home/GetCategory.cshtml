@model Category

@{ Layout = "_Layout";
    ViewBag.Title = "Get Category By ID";
}

<h2>Get Category By ID</h2>

<a asp-action="IndexCategory" class="btn btn-sm btn-primary">Go Back</a>

<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="Cid">Enter in ID</label>
        <input class="form-control" name="Cid" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Search</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Category</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CategoryId</td>
                <td>@Model.CategoryName</td>
            </tr>
        </tbody>
    </table>
}
